.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to Rails.application.class.parent_name, root_path, class: 'brand'
      - if logged_in?
        Hi, #{current_user.name}
        %a{:href => logout_path}
          = t('auth.logout')
      - else
        %a{:href => login_path}
          = t('auth.login')
